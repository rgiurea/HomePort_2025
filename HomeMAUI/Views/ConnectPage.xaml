<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage
    x:Class="HomeMAUI.Views.ConnectPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:HomeMAUI.ViewModels"
    xmlns:views="clr-namespace:HomeMAUI.Views"
    x:TypeArguments="vm:ConnectViewModel"
    x:DataType="vm:ConnectViewModel">
    <ContentPage.BindingContext>
        <vm:ConnectViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="{Binding DeviceName}" FontSize="24" HorizontalOptions="Center" />
        <ActivityIndicator IsRunning="True" />
    </VerticalStackLayout>
</views:BasePage>
