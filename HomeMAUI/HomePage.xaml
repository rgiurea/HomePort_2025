<?xml version="1.0" encoding="utf-8" ?>
<local:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HomeMAUI"
             xmlns:vm="clr-namespace:HomeMAUI.ViewModels"
             xmlns:models="clr-namespace:HomeMAUI.Models"
             x:Class="HomeMAUI.HomePage"
             x:DataType="vm:HomeViewModel"
             Title="Available Devices">
    <local:BasePage.BindingContext>
        <vm:HomeViewModel />
    </local:BasePage.BindingContext>
    
    <Grid>
        <CollectionView ItemsSource="{Binding Devices}"
                       SelectionMode="Single"
                       SelectedItem="{Binding SelectedDevice}"
                       BackgroundColor="Transparent">
            
            <CollectionView.EmptyView>
                <StackLayout>
                    <Label Text="ðŸ” No devices found" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"
                           FontSize="18"
                           TextColor="#666666"
                           Margin="0,20" />
                    <Label Text="Pull down to refresh and scan for devices" 
                           HorizontalOptions="Center"
                           FontSize="14"
                           TextColor="#999999" />
                </StackLayout>
            </CollectionView.EmptyView>
            
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:BleDevice">
                    <Grid Padding="16,8">
                        <Border BackgroundColor="White"
                                Stroke="#E0E0E0"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 12">
                            <Border.Shadow>
                                <Shadow Brush="Black" Opacity="0.1" Radius="8" Offset="0,2" />
                            </Border.Shadow>
                            <Grid Padding="16" ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">
                                
                                <!-- Device Icon -->
                                <Label Grid.Column="0" 
                                       Grid.RowSpan="2"
                                       Text="ðŸ“±"
                                       FontSize="24"
                                       VerticalOptions="Center"
                                       Margin="0,0,12,0" />
                                
                                <!-- Device Info -->
                                <StackLayout Grid.Column="1" 
                                           Grid.Row="0"
                                           Spacing="2">
                                    <Label Text="{Binding Name}" 
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#333333" />
                                    <Label Text="{Binding BleAddress}" 
                                           FontSize="12"
                                           TextColor="#666666" />
                                </StackLayout>
                                
                                <!-- Signal Strength -->
                                <StackLayout Grid.Column="2" 
                                           Grid.RowSpan="2"
                                           VerticalOptions="Center"
                                           HorizontalOptions="End">
                                    <Label Text="ðŸ“¶"
                                           FontSize="16"
                                           HorizontalOptions="Center" />
                                    <Label Text="{Binding Rssi, StringFormat='{0} dBm'}"
                                           FontSize="11"
                                           TextColor="#666666"
                                           HorizontalOptions="Center" />
                                </StackLayout>
                            </Grid>
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</local:BasePage>
