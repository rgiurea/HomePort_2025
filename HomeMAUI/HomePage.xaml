<?xml version="1.0" encoding="utf-8" ?>
<local:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HomeMAUI"
             xmlns:vm="clr-namespace:HomeMAUI.ViewModels"
             x:Class="HomeMAUI.HomePage"
             x:DataType="vm:HomeViewModel"
             Title="Available Devices">
    <local:BasePage.BindingContext>
        <vm:HomeViewModel />
    </local:BasePage.BindingContext>
    
    <Grid>
        <CollectionView ItemsSource="{Binding Devices}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedDevice}"
                        BackgroundColor="Transparent">
            <CollectionView.EmptyView>
                <StackLayout>
                    <Label Text="No devices found" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"
                           FontSize="16"
                           TextColor="Gray" />
                    <Label Text="Pull to refresh" 
                           HorizontalOptions="Center"
                           FontSize="12"
                           TextColor="LightGray" />
                </StackLayout>
            </CollectionView.EmptyView>
            
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="16,8">
                        <Frame BackgroundColor="White"
                               BorderColor="LightGray"
                               CornerRadius="8"
                               HasShadow="True"
                               Padding="16">
                            <Grid ColumnDefinitions="*,Auto">
                                <StackLayout Grid.Column="0">
                                    <Label Text="{Binding Name}" 
                                           FontSize="16"
                                           FontAttributes="Bold" />
                                    <Label Text="{Binding BleAddress}" 
                                           FontSize="12"
                                           TextColor="Gray" />
                                </StackLayout>
                                <Label Grid.Column="1"
                                       Text="{Binding Rssi, StringFormat='{0} dBm'}"
                                       FontSize="12"
                                       TextColor="DarkGray"
                                       VerticalOptions="Center" />
                            </Grid>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</local:BasePage>
