<?xml version="1.0" encoding="utf-8" ?>
<local:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HomeMAUI"
             xmlns:vm="clr-namespace:HomeMAUI.ViewModels"
             x:Class="HomeMAUI.ConnectPage"
             x:DataType="vm:ConnectViewModel"
             Title="Connect">
    <local:BasePage.BindingContext>
        <vm:ConnectViewModel />
    </local:BasePage.BindingContext>
    <VerticalStackLayout Padding="30" Spacing="10">
        <Label Text="Connecting to:" />
        <Label Text="{Binding Device.Name}" Style="{StaticResource Headline}" />
        <ActivityIndicator IsRunning="True" />
    </VerticalStackLayout>
</local:BasePage>
