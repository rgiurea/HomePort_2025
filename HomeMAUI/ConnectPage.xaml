<?xml version="1.0" encoding="utf-8" ?>
<local:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HomeMAUI"
             xmlns:vm="clr-namespace:HomeMAUI.ViewModels"
             x:Class="HomeMAUI.ConnectPage"
             x:DataType="vm:ConnectViewModel"
             Title="Connecting">
    <local:BasePage.BindingContext>
        <vm:ConnectViewModel />
    </local:BasePage.BindingContext>
    
    <Grid Padding="20" VerticalOptions="Center">
        <Border BackgroundColor="White"
                Stroke="#E0E0E0"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 16"
                Margin="10">
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.1" Radius="10" Offset="0,2" />
            </Border.Shadow>
            <StackLayout Padding="30" Spacing="20">
                
                <!-- Device Icon -->
                <Label Text="ðŸ”—"
                       FontSize="48"
                       HorizontalOptions="Center"
                       TextColor="#007ACC" />
                
                <!-- Connection Status -->
                <Label Text="Establishing Connection"
                       FontSize="20"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="#333333" />
                
                <!-- Device Info Card -->
                <Border BackgroundColor="#F8F9FA"
                        Stroke="#DEE2E6"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 8"
                        Margin="0,10">
                    <Grid Padding="16" ColumnDefinitions="Auto,*">
                        <Label Grid.Column="0"
                               Text="ðŸ“±"
                               FontSize="20"
                               VerticalOptions="Center"
                               Margin="0,0,12,0" />
                        
                        <StackLayout Grid.Column="1" Spacing="4">
                            <Label Text="Connecting to:"
                                   FontSize="12"
                                   TextColor="#666666" />
                            <Label Text="{Binding Device.Name}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#333333" />
                            <Label Text="{Binding Device.BleAddress}"
                                   FontSize="12"
                                   TextColor="#666666" />
                        </StackLayout>
                    </Grid>
                </Border>
                
                <!-- Progress Indicator -->
                <ActivityIndicator IsRunning="True"
                                  Color="#007ACC"
                                  HeightRequest="80"
                                  WidthRequest="80"
                                  HorizontalOptions="Center" />
                
                <!-- Status Message -->
                <Label Text="Please wait while we establish a secure connection..."
                       FontSize="14"
                       TextColor="#666666"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       Margin="0,10,0,0" />
                
            </StackLayout>
        </Border>
    </Grid>
</local:BasePage>
